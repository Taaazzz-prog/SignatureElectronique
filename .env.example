# Variables d'environnement pour l'application
# Copiez ce fichier vers .env et remplissez les valeurs

# Clé secrète pour Flask (GÉNÉRER UNE CLÉ UNIQUE EN PRODUCTION)
# Générez avec: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=votre-cle-secrete-unique-ici

# Chemin de la base de données
DATABASE_PATH=/app/data/signature_app.db

# Configuration de production
FLASK_ENV=production
DEBUG=False
